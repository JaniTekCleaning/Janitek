          <% @client.hot_button_items.each do |item| %>
            <li>
              <input type='text' name='variable_item[]'
                value='<%= item %>' class='variable_item'></li>
            </li>
          <% end %>
        </ol>
        
        <%= submit_tag "Save",  class:"btn btn-primary"  %>
        <%= link_to 'Cancel', policy(@client).show? ? client_path(@client) : root_path, class:'btn btn-danger' %>
        <% end %>
        -->
        
        <script>
          var clientId = "<%= @client.id %>";
          var postUrl = "<%= client_update_hotbutton_path(@client) %>";
        </script>
      </div>
    </div>
  </div>
</div>