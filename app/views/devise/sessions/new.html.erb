<h1>Log In</h1>

<%= form_for(resource, html:{class:"form-inline"}, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email, class:"sr-only" %><br />
    <%= f.email_field :email, placeholder:"Email", autofocus: true, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password, class:"sr-only"  %><br />
    <%= f.password_field :password, placeholder:"Password",  autocomplete: "off", class:"form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me, class:"form-control" %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="form-group">
    <%= f.submit "Log in", class:"btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
