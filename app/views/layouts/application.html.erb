<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">
  <title><%= content_for?(:page_title) ? content_for(:page_title) : "Janitek" %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="main-container">
  <div class="header-overlay-right" style="opacity: 1;"></div>
<%= render 'layouts/navbar' %>
  <div class="body-container container">
    <% if content_for?(:title) %>
      <div class="header-title-section">
        <h1 class="page-header-title"> <%= content_for(:title) %></h1>
        <div class="page-header-gimmick"></div>
        <br style="clear:both;">
      </div>
    <% end %>
    <% if content_for?(:search) || breadcrumbs.any? %>
      <div class='row breadcrumbs-bar'>
        <div class='col-xs-4'>
          <%= render_breadcrumbs %>
        </div>
        <% if content_for?(:search) %>
        <div class='searchbox col-xs-8'>
          <%= content_for(:search) %>
        </div>
        <% end %>
      </div>
    <% end %>
    <% if notice %><p class="notice"><%= notice %></p><% end %>
    <% if alert %><p class="alert"><%= alert %></p><% end %>
  
    <%= yield %>
  </div>
  <%= render 'layouts/footer' %>
</div>
</body>
</html>
