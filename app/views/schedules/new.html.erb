<%- title "New Schedule" %>
<%- back_link_url client_path(@client) %>
<%- page_title "Janitek | New Schedule" %>

<%= form_for([:schedule,@client,@schedule], :url=>client_schedules_path(@client)) do |f| %>
  <% if @schedule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>

      <ul>
      <% @schedule.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>Please note that you may use either the url or the file upload fields.  Using both at once is not recommended.

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, class:"form-control"  %>
  </div>

  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_field :url, class:"form-control"  %>
  </div>

  <div class="field">
    <%= f.label :s3, "File Upload" %><br />
    <%= f.file_field :s3, class:"form-control"  %>
  </div>

  <div class="form-group">
    <%= f.submit class:"btn btn-primary" %>
    <%= link_to 'Cancel', client_path(@client), class:'btn btn-danger' %>
  </div>
<% end %>
