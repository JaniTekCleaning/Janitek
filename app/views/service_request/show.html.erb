<%- title "Janitek Client Connect: Service Request" %>
<%- page_title "Janitek | Contract" %>

<div class='row business-profile-full' id='client_root'>
  <div class='col-md-4' id="client-col-left">
    <%=render 'root/clientlead' %>
  </div>
  <div class='col-md-8' id="client-col-right">
    <div class='widget' id=''>
      <div class='widget-header'>
        <div class='widget-icon'>
          <img src="<%= asset_path('icons/icon-service-request.png') %>">
        </div><div class='widget-title'>
          Submit a Service Request
        </div>
      </div>
      <div class='widget-content'>
        <h1>Service Request Form</h1>
        <%= form_tag(service_request_path, method: :post) do -%>
          <div class="form-group">
            <label for="service">Service Request</label><br>
            <select name="service" id='service'>
              <% @service_request.fields.each_index do |index| %>
                <option value='<%= index %>'><%= @service_request.fields[index] %></option>    
              <% end %>
            </select>
          </div>
          <div class="form-group">
            <label for="complaint">Complaint / Request</label><br>
            <textarea id='complaint' name='complaint'></textarea>
          </div>
          <div class="form-group">
            <label for="other">Other</label><br>
            <textarea id='other' name='other'></textarea>
          </div>
        
          <div class="form-group submit-wrapper">
            <button name="commit" type="submit" value="Submit">
              <div class='widget' id='submit-request-button'>
                <div class='widget-header'>
                  <div class='widget-icon'>
                    <img src="<%= asset_path('icons/icon-service-request.png') %>">
                  </div><div class='widget-title'>
                    Submit
                  </div>
                </div>
              </div>
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>